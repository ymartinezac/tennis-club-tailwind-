{
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-recess-order",
    "stylelint-scss"
  ],
  "rules": {
    "no-descending-specificity": true,
    "block-no-empty": true,
    "comment-no-empty": true,
    "no-irregular-whitespace": true,
    "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$"
  }
}